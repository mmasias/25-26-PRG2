
            if (numeroProductos == 0) {
                System.out.println("Carrito vacio, no se puede calcular el descuento.");
                continue;
            }

            double precioTotal = calcularPrecioTotal(precios, cantidades, numeroProductos);
            int cantidadTotal = calcularCantidadTotal(cantidades, numeroProductos);

            System.out.print("Tipo de cliente (1=Normal, 2=Estudiante, 3=Jubilado, 4=VIP): ");
            int tipoCliente = scanner.nextInt();

            System.out.print("Es temporada de rebajas? (s/n): ");
            char esRebaja = scanner.next().charAt(0);

            double precioFinal = aplicarDescuentos(precioTotal, cantidadTotal, tipoCliente, esRebaja);

            mostrarResumen(precioTotal, precioFinal, cantidadTotal);
        }

        scanner.close();
    }

    private static int mostrarMenu(Scanner scanner) {
        System.out.println("[1] Realizar Nueva Compra");
        System.out.println("[2] Salir");
        System.out.print("Opcion: ");
        int opcion = scanner.nextInt();
        scanner.nextLine();
        return opcion;
    }

    private static int cargarCarrito(Scanner scanner, String[] nombres, double[] precios, int[] cantidades) {
        int contador = 0;
        System.out.println("Carrito de Compra");

        while (contador < MAX_PRODUCTOS) {
            System.out.print("Nombre del producto (o 'fin' para terminar): ");
            String nombre = scanner.nextLine();

            if (nombre.equalsIgnoreCase("fin")) {
                break;
            }

            nombres[contador] = nombre;

            System.out.print("Precio de '" + nombre + "': ");
            precios[contador] = scanner.nextDouble();

            System.out.print("Cantidad de '" + nombre + "': ");
            cantidades[contador] = scanner.nextInt();
            scanner.nextLine();

            contador++;
        }
        return contador;
    }

    private static double calcularPrecioTotal(double[] precios, int[] cantidades, int totalProductos) {
        double total = 0;
        for (int i = 0; i < totalProductos; i++) {
            total += precios[i] * cantidades[i];
        }
        return total;
    }

    private static int calcularCantidadTotal(int[] cantidades, int totalProductos) {
        int total = 0;
        for (int i = 0; i < totalProductos; i++) {
            total += cantidades[i];
        }
        return total;
    }

    private static double aplicarDescuentos(double precio, int cantidad, int tipoCliente, char rebaja) {
        double resultado = precio;

        switch (tipoCliente) {
            case NORMAL:
                if (rebaja == 's') resultado *= 0.90;
                if (cantidad >= 5) resultado *= 0.95;
                break;

            case ESTUDIANTE:
                resultado *= 0.85;
                if (rebaja == 's') resultado *= 0.90;
                if (cantidad >= 3) resultado *= 0.92;
                break;

            case JUBILADO:
                resultado *= 0.80;
                if (rebaja == 's') resultado *= 0.85;
                if (cantidad >= 2) resultado *= 0.90;
                break;

            case VIP:
                resultado *= 0.70;
                if (rebaja == 's') resultado *= 0.80;
                if (cantidad >= 1) resultado *= 0.85;
                break;
        }

        if (resultado > 500) {
            resultado -= 50;
        }

        return resultado;
    }

    private static void mostrarResumen(double original, double finalPrecio, int cantidad) {
        System.out.println("Resumen de Compra");
        System.out.println("Precio original total: " + original + " euros");
        System.out.println("Numero total de productos: " + cantidad);
        System.out.println("Precio final con descuento: " + finalPrecio + " euros");
        System.out.println("Ahorro total: " + (original - finalPrecio) + " euros");

        double porcentaje = ((original - finalPrecio) / original) * 100;
        System.out.println("Porcentaje de ahorro: " + porcentaje + "%");
    }
}
        scanner.close();
    }
}
